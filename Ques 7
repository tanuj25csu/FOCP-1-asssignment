#include <stdio.h>

int main() {
    int n, i, j;

    // Input number of rows
    printf("Enter the number of rows: ");
    scanf("%d", &n);

    printf("\nBinary Pyramid Pattern:\n\n");

    // Outer loop for rows
    for (i = 1; i <= n; i++) {
        // Inner loop for printing binary numbers
        for (j = 1; j <= i; j++) {
            printf("0");
            if (j < i)
                printf("1");
        }

        // Space between two halves (for symmetry)
        printf(" ");

        // Repeat same pattern on the right side
        for (j = 1; j <= i; j++) {
            printf("0");
            if (j < i)
                printf("1");
        }

        printf("\n"); // Move to next line
    }

    return 0;
}
