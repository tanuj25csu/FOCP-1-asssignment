#include <stdio.h>
#include <math.h>

int main() {
    long long binary;
    int decimal = 0, i = 0, remainder;

    // Input binary number
    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    // Conversion: Binary â†’ Decimal
    while (binary != 0) {
        remainder = binary % 10;         // Get last digit
        decimal += remainder * pow(2, i); // Multiply by power of 2
        binary /= 10;                    // Remove last digit
        i++;
    }

    // Output the result
    printf("Equivalent Decimal number: %d\n", decimal);

    return 0;
}
