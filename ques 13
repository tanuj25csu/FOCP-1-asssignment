#include <stdio.h>

int main() {
    int arr[100], n, i;
    int peak_found = 0;

    // Input number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Input the array elements
    printf("Enter the elements:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Check for peak element
    for (i = 0; i < n; i++) {
        if ((i == 0 || arr[i] >= arr[i - 1]) &&    // Left neighbor or first element
            (i == n - 1 || arr[i] >= arr[i + 1])) { // Right neighbor or last element
            printf("Peak element found: %d at position %d\n", arr[i], i + 1);
            peak_found = 1;
            break; // Stop after finding the first peak
        }
    }

    if (!peak_found) {
        printf("No peak element found.\n");
    }

    return 0;
}
